@page "/reports/{UsuarioId:int}"
@rendermode InteractiveServer

<PageTitle>Reporte de Ventas</PageTitle>

<div class="container mt-3" style="max-width: 800px;">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>üìä Reportes</h3>
        <a href="/dashboard/@UsuarioId" class="btn btn-outline-secondary btn-sm">Volver</a>
    </div>

    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @ErrorMessage
            <button type="button" class="btn-close" @onclick="() => ErrorMessage = null"></button>
        </div>
    }

    <!-- Filtros -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-2 align-items-end">
                <div class="col-5">
                    <label class="form-label small">Desde</label>
                    <input type="date" class="form-control" @bind="FechaInicio" />
                </div>
                <div class="col-5">
                    <label class="form-label small">Hasta</label>
                    <input type="date" class="form-control" @bind="FechaFin" />
                </div>
                <div class="col-2">
                    <button class="btn btn-primary w-100" @onclick="GenerarReporte">
                        üîç
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (IsLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status"></div>
            <p>Calculando ventas...</p>
        </div>
    }
    else
    {
        <!-- KPIs -->
        <div class="row mb-3">
            <div class="col-6">
                <div class="card bg-success text-white text-center p-2 h-100">
                    <small>Ventas Totales</small>
                    <h3>@TotalVentas.ToString("C2")</h3>
                </div>
            </div>
            <div class="col-6">
                <div class="card bg-info text-white text-center p-2 h-100">
                    <small>Transacciones</small>
                    <h3>@CantidadTransacciones</h3>
                </div>
            </div>
        </div>

        <!-- Tabla Detallada -->
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h6 class="mb-0">Detalle de Operaciones</h6>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0" style="font-size: 0.9rem;">
                    <thead>
                        <tr>
                            <th>Hora</th>
                            <th>Pago</th>
                            <th class="text-end">Monto</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ReporteVentas.Any())
                        {
                            @foreach (var venta in ReporteVentas.OrderByDescending(v => v.Fecha))
                            {
                                <tr>
                                    <td>@venta.Fecha.ToString("HH:mm")</td>
                                    <td>@venta.Producto (@venta.Cantidad)</td>
                                    <td class="text-end fw-bold">@venta.Subtotal.ToString("C2")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted py-3">
                                    No hay ventas en este rango.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
