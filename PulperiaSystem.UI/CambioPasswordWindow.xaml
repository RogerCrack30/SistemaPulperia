<Window x:Class="PulperiaSystem.UI.CambioPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cambiar Contraseña" Height="350" Width="380"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="White">

    <StackPanel Margin="30">
        <TextBlock Text="Cambio de Contraseña" FontSize="20" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <TextBlock Text="Usuario" Foreground="#7F8C8D"/>
        <TextBox x:Name="txtUser" Height="30" Margin="0,0,0,10" Background="#F4F6F6" BorderThickness="0"/>

        <TextBlock Text="Contraseña Actual" Foreground="#7F8C8D"/>
        <PasswordBox x:Name="txtOldPass" Height="30" Margin="0,0,0,10" Background="#F4F6F6" BorderThickness="0"/>

        <TextBlock Text="Nueva Contraseña" Foreground="#7F8C8D"/>
        <PasswordBox x:Name="txtNewPass" Height="30" Margin="0,0,0,20" Background="#F4F6F6" BorderThickness="0"/>
        
        <TextBlock FontSize="10" Foreground="#E74C3C" Text="Nota: Solo para Administradores." HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <Button Content="CAMBIAR CONTRASEÑA" Height="40" Background="#34495E" Foreground="White" FontWeight="Bold" BorderThickness="0" Click="BtnCambiar_Click"/>
    </StackPanel>
</Window>
