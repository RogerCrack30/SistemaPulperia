                    FontSize="14" FontWeight="Bold" Margin="0,0,10,0" Click="BtnNuevo_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            
            <Button Content="âœï¸ Editar" Width="100" Height="40" Background="#F39C12" Foreground="White" 
                    FontSize="14" FontWeight="Bold" Margin="0,0,10,0" Click="BtnEditar_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            
            <Button Content="ðŸ—‘ï¸ Eliminar" Width="100" Height="40" Background="#E74C3C" Foreground="White" 
                    FontSize="14" FontWeight="Bold" Click="BtnEliminar_Click">
