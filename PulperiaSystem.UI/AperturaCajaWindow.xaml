<Window x:Class="PulperiaSystem.UI.AperturaCajaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Apertura de Turno" Height="300" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#2C3E50">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="INICIO DE TURNO" HorizontalAlignment="Center" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,10,0,30"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock Text="Ingrese Fondo de Caja (Saldo Inicial):" Foreground="#BDC3C7" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="txtMonto" Height="40" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                     BorderThickness="0" Background="White"/>
            <TextBlock Text="* Ingrese 0 si la caja está vacía." FontStyle="Italic" Foreground="Gray" Margin="0,5,0,0"/>
        </StackPanel>

        <Button Grid.Row="2" Content="ABRIR TURNO" Height="50" Margin="0,20,0,0"
                Background="#27AE60" Foreground="White" FontSize="18" FontWeight="Bold" BorderThickness="0"
                Cursor="Hand" Click="BtnAbrir_Click">
             <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="5" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
