<Window x:Class="PulperiaSystem.UI.ProductoForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalle de Producto" Height="550" Width="450"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F5F5F5" FontFamily="Segoe UI">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,0"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Title -->
            <RowDefinition Height="*"/>    <!-- Form -->
            <RowDefinition Height="Auto"/> <!-- Buttons -->
        </Grid.RowDefinitions>

        <TextBlock Text="Gestión de Producto" FontSize="20" FontWeight="Bold" Foreground="#333" Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Código de Barras / Referencia"/>
                <TextBox x:Name="txtCodigo" KeyDown="TxtCodigo_KeyDown"/>

                <TextBlock Text="Nombre del Producto *"/>
                <TextBox x:Name="txtNombre"/>

                <TextBlock Text="Categoría *"/>
                <ComboBox x:Name="cmbCategoria" Height="30" Margin="0,0,0,15" DisplayMemberPath="Nombre" SelectedValuePath="CategoriaId"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Precio Compra (Costo)"/>
                        <TextBox x:Name="txtCompra"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Precio Venta *"/>
                        <TextBox x:Name="txtVenta"/>
                    </StackPanel>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Stock Actual"/>
                        <TextBox x:Name="txtStock"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Stock Mínimo"/>
                        <TextBox x:Name="txtMinStock"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Unidad de Medida (ej. UN, KG)"/>
                <TextBox x:Name="txtUnidad"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Cancelar" Width="100" Height="35" Background="#95A5A6" Foreground="White" BorderThickness="0" Click="BtnCancelar_Click" Margin="0,0,10,0"/>
            <Button Content="GUARDAR" Width="100" Height="35" Background="#2980B9" Foreground="White" BorderThickness="0" Click="BtnGuardar_Click"/>
        </StackPanel>
    </Grid>
</Window>
