<Window x:Class="PulperiaSystem.UI.MenuPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema Pulper칤a - Men칰 Principal" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen" Background="#F3F3F3">

    <Window.Resources>
        <!-- Estilo para botones del men칰 -->
        <Style TargetType="Button" x:Key="MenuButtonStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#34495E"/> <!-- Color hover -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/> <!-- Panel Lateral -->
            <ColumnDefinition Width="*"/>   <!-- Contenido -->
        </Grid.ColumnDefinitions>

        <!-- BARRA LATERAL -->
        <Border Grid.Column="0" Background="#2C3E50">
            <StackPanel>
                <!-- T칤tulo / Logo -->
                <TextBlock x:Name="txtTituloApp" Text="GALER칍N LOS REYES" Foreground="White" FontSize="20" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,30,0,5" TextWrapping="Wrap" TextAlignment="Center"/>
                <TextBlock x:Name="lblUsuario" Text="Usuario: ---" Foreground="#BDC3C7" FontSize="14" 
                           HorizontalAlignment="Center" Margin="0,0,0,30" FontWeight="SemiBold"/>

                <!-- Botones de Navegaci칩n -->
                
                <!-- NUEVO: Bot칩n Dashboard -->
                <Button x:Name="BtnDashboard" Content="游  Inicio" Style="{StaticResource MenuButtonStyle}" Click="BtnDashboard_Click" Background="#34495E"/>

                <Button x:Name="BtnVentas" Content="游  Ventas (POS)" Style="{StaticResource MenuButtonStyle}" Click="BtnVentas_Click"/>
                <Button x:Name="BtnProductos" Content="游닍  Productos" Style="{StaticResource MenuButtonStyle}" Click="BtnProductos_Click"/>
                <Button x:Name="BtnInventario" Content="游늶  Inventario" Style="{StaticResource MenuButtonStyle}" Click="BtnInventario_Click"/>
                <Button x:Name="BtnPersonas" Content="游논  Clientes/Prov." Style="{StaticResource MenuButtonStyle}" Click="BtnPersonas_Click"/>
                <Button x:Name="BtnReportes" Content="游늵  Reportes" Style="{StaticResource MenuButtonStyle}" Click="BtnReportes_Click"/>

                <!-- ADMIN ONLY -->
                <Button x:Name="BtnUsuarios" Content="游댐  Gesti칩n Usuarios" Style="{StaticResource MenuButtonStyle}" Click="BtnUsuarios_Click" Background="#2C3E50" Visibility="Collapsed"/>
                
                <Separator Background="#34495E" Margin="20"/>
                
                <Button Content="游뛁  Cerrar Sesi칩n" Style="{StaticResource MenuButtonStyle}" Click="BtnSalir_Click" Foreground="#E74C3C"/>
            </StackPanel>
        </Border>

        <!-- 츼REA DE CONTENIDO -->
        <Border Grid.Column="1" Background="#ECF0F1" Padding="20">
            <Grid>
                <!-- T칤tulo o Header de la vista -->
                <TextBlock x:Name="txtTituloVista" Text="Bienvenido al Sistema" FontSize="28" Foreground="#2C3E50" VerticalAlignment="Top"/>
                
                <!-- Aqu칤 se cargar치n las vistas -->
                <ContentControl x:Name="MainContent" Margin="0,50,0,0">
                    <TextBlock Text="Seleccione una opci칩n del men칰 para comenzar." 
                               FontSize="18" Foreground="#7F8C8D" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </ContentControl>
            </Grid>
        </Border>
    </Grid>
</Window>
