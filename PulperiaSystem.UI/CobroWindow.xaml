<Window x:Class="PulperiaSystem.UI.CobroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Procesar Pago" Height="450" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#2C3E50">
    
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="TOTAL A PAGAR" Foreground="#BDC3C7" HorizontalAlignment="Center" FontSize="16"/>
            <TextBlock x:Name="lblTotal" Text="$0.00" Foreground="White" HorizontalAlignment="Center" FontSize="40" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Efectivo Recibido:" Foreground="#BDC3C7" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="txtRecibido" Height="50" FontSize="24" FontWeight="Bold" 
                     HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                     TextChanged="TxtRecibido_TextChanged" KeyDown="TxtRecibido_KeyDown"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Cambio estimado: " Foreground="Gray"/>
                <TextBlock x:Name="lblCambioPrevia" Text="---" FontWeight="Bold" Foreground="LightGreen"/>
            </StackPanel>

            <Button Content="COBRAR" Height="60" Margin="0,30,0,0"
                    Background="#27AE60" Foreground="White" FontSize="20" FontWeight="Bold"
                    Click="BtnCobrar_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Resultado Final -->
            <TextBlock x:Name="lblTituloCambio" Text="SU CAMBIO:" Foreground="#F1C40F" 
                       HorizontalAlignment="Center" FontSize="18" FontWeight="Bold" Margin="0,30,0,0" Visibility="Collapsed"/>
            <TextBlock x:Name="lblCambio" Text="$0.00" Foreground="#F1C40F" 
                       HorizontalAlignment="Center" FontSize="36" FontWeight="Bold" Visibility="Collapsed"/>

        </StackPanel>
    </Grid>
</Window>
