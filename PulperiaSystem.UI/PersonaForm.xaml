<Window x:Class="PulperiaSystem.UI.PersonaForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Datos de Persona" Height="350" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="txtTitulo" Text="Nueva Persona" FontSize="20" FontWeight="Bold" Foreground="#333" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Nombre Completo *"/>
            <TextBox x:Name="txtNombre" Height="30" Margin="0,5,0,15" Padding="5,0" VerticalContentAlignment="Center"/>

            <TextBlock Text="Teléfono"/>
            <TextBox x:Name="txtTelefono" Height="30" Margin="0,5,0,15" Padding="5,0" VerticalContentAlignment="Center"/>

            <TextBlock Text="Dirección"/>
            <TextBox x:Name="txtDireccion" Height="30" Margin="0,5,0,15" Padding="5,0" VerticalContentAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Cancelar" Width="100" Height="35" Background="#95A5A6" Foreground="White" BorderThickness="0" Click="BtnCancelar_Click" Margin="0,0,10,0"/>
            <Button Content="GUARDAR" Width="100" Height="35" Background="#2980B9" Foreground="White" BorderThickness="0" Click="BtnGuardar_Click"/>
        </StackPanel>
    </Grid>
</Window>
