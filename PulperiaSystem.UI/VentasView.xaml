<UserControl x:Class="PulperiaSystem.UI.VentasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900" Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>   <!-- Izquierda: Buscador y Productos -->
            <ColumnDefinition Width="350"/> <!-- Derecha: Carrito -->
        </Grid.ColumnDefinitions>

        <!-- COLUMNA IZQUIERDA -->
        <Grid Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Buscador -->
            <Border Background="#F0F2F5" CornerRadius="5" Padding="5" Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="" VerticalAlignment="Center" Margin="10,0" Foreground="Gray"/>
                    <TextBox x:Name="txtBusqueda" Width="400" FontSize="16" BorderThickness="0" Background="Transparent" 
                             VerticalAlignment="Center" TextChanged="TxtBusqueda_TextChanged"
                             KeyDown="TxtBusqueda_KeyDown"
                             Padding="5" Tag="Buscar producto por nombre o c贸digo..."/>
                </StackPanel>
            </Border>

            <!-- Lista de Productos Encontrados -->
            <DataGrid x:Name="gridProductos" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" 
                      HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                      Background="White" BorderBrush="#EEEEEE" RowHeight="35"
                      MouseDoubleClick="GridProductos_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ProductoId}" Width="50"/>
                    <DataGridTextColumn Header="C贸digo" Binding="{Binding Codigo}" Width="80"/>
                    <DataGridTextColumn Header="Producto" Binding="{Binding Nombre}" Width="*"/>
                    <DataGridTextColumn Header="Precio" Binding="{Binding PrecioVenta, StringFormat=C}" Width="80"/>
                    <DataGridTextColumn Header="Stock" Binding="{Binding StockActual}" Width="60"/>
                </DataGrid.Columns>
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="5"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                        <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.CellStyle>
            </DataGrid>
        </Grid>

        <!-- COLUMNA DERECHA (CARRITO) -->
        <Border Grid.Column="1" Background="#F9F9F9" BorderBrush="#E0E0E0" BorderThickness="1,0,0,0">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- T铆tulo -->
                    <RowDefinition Height="*"/>    <!-- Lista Carrito -->
                    <RowDefinition Height="Auto"/> <!-- Totales y Bot贸n -->
                </Grid.RowDefinitions>

                <TextBlock Text="  Carrito de Compra" FontSize="18" FontWeight="Bold" Foreground="#333" Margin="0,0,0,15"/>

                <!-- Lista de Items en Carrito -->
                <!-- Lista de Items en Carrito -->
                <DataGrid x:Name="gridCarrito" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                          HeadersVisibility="Column" GridLinesVisibility="None" Background="White" BorderThickness="0" CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Producto" Binding="{Binding NombreProducto}" Width="*"/>
                        
                        <!-- Columna Acciones con Botones -->
                        <DataGridTemplateColumn Header="Acciones" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="-" Width="30" Height="30" Background="#E74C3C" Foreground="White" FontWeight="Bold" 
                                                Click="BtnRestarCantidad_Click" Cursor="Hand" Margin="0,0,5,0">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border CornerRadius="3" Background="{TemplateBinding Background}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>

                                        <TextBlock Text="{Binding Cantidad}" VerticalAlignment="Center" FontWeight="Bold" FontSize="14" Width="30" TextAlignment="Center"/>

                                        <Button Content="+" Width="30" Height="30" Background="#27AE60" Foreground="White" FontWeight="Bold" 
                                                Click="BtnSumarCantidad_Click" Cursor="Hand" Margin="5,0,0,0">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border CornerRadius="3" Background="{TemplateBinding Background}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Total" Binding="{Binding Subtotal, StringFormat=C}" Width="70"/>
                        
                         <DataGridTemplateColumn Width="40">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="X" Width="30" Height="30" Background="Transparent" Foreground="Red" BorderThickness="0" FontWeight="Bold" Click="BtnEliminarItem_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Totales y Bot贸n Charge -->
                <StackPanel Grid.Row="2" Margin="0,20,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,20">
                        <TextBlock Text="TOTAL:" FontSize="20" FontWeight="Light" Foreground="#666" VerticalAlignment="Bottom" Margin="0,0,10,2"/>
                        <TextBlock x:Name="txtTotal" Text="$0.00" FontSize="32" FontWeight="Bold" Foreground="#2C3E50"/>
                    </StackPanel>

                    <Button x:Name="btnCobrar" Content="COBRAR" Height="60" FontSize="20" FontWeight="Bold" 
                            Background="#27AE60" Foreground="White" BorderThickness="0" Cursor="Hand"
                            Click="BtnCobrar_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="8" Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
