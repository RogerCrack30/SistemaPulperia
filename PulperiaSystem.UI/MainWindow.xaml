<Window x:Class="PulperiaSystem.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - Pulpería" Height="450" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize"
        Background="#F0F2F5" FontFamily="Segoe UI">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="5" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border CornerRadius="5" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0062A3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="White" Width="320" VerticalAlignment="Center" CornerRadius="10" Padding="30">
            <Border.Effect>
                <DropShadowEffect Color="#BBBBBB" Direction="270" ShadowDepth="2" BlurRadius="10" Opacity="0.3"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Bienvenido" FontSize="26" FontWeight="Bold" Foreground="#333333" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <TextBlock Text="Sistema de Pulpería" FontSize="14" Foreground="#666666" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <TextBlock Text="Usuario" Foreground="#555555" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUser" Margin="0,0,0,15"/>

                <TextBlock Text="Contraseña" Foreground="#555555" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPass" Margin="0,0,0,25" KeyDown="txtPass_KeyDown"/>

                <Button Content="INICIAR SESIÓN" Click="BtnLogin_Click" Margin="0,0,0,15"/>

                <TextBlock Text="¿Cambiar Contraseña?" Foreground="#0078D4" Cursor="Hand" HorizontalAlignment="Center" MouseLeftButtonUp="OnCambiarPass_Click" TextDecorations="Underline" FontSize="12"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
